<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELIVERY PERSON ACCOUNT REGISTRATION"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textColor="#FF9800"
                android:textStyle="bold"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                android:layout_marginBottom="30dp"

                app:lottie_fileName="login.json"
                app:lottie_loop="true"/>



            <EditText
                android:layout_width="match_parent"
                android:hint="Name"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dp_reg_name"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Email"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dp_reg_email"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dp_reg_password"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dp_reg_PhoneNo"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select State"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <Spinner

                android:layout_marginTop="10dp"
                android:id="@+id/state_spinner_dp_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:hint="City"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dp_city"
                android:layout_height="wrap_content">
            </EditText>


            <Button
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:id="@+id/dp_reg_submit"
                android:background="@drawable/button_background">

            </Button>


        </LinearLayout>
    </ScrollView>

</LinearLayout>