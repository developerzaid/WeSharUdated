<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".users.areaincharge.AIHome">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="20dp"
        android:outlineAmbientShadowColor="@color/black"
        android:id="@+id/cardInfo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY DETAILS"
                android:textSize="20sp"
                android:id="@+id/myinfox"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>


            <TextView
                android:layout_below="@+id/myinfox"
                android:textStyle="bold"
                android:id="@+id/UNamex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView

                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_below="@id/UNamex"
                android:id="@+id/UCityx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_below="@id/UCityx"
                android:id="@+id/UEmailx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_below="@id/UEmailx"
                android:id="@+id/UPhonex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONATION AVAILABLE IN AREA"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="#FF9800"
        android:textStyle="bold"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/recyclerViewi"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>